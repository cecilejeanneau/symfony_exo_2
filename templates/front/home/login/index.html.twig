{% extends 'base.html.twig' %}
{% block content %}
    <h1>Connexion</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post" action="{{ path('app_home_login') }}">
        <label for="username">Nom d'utilisateur :</label>
        <input type="text" id="username" name="_username" required><br>

        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="_password" required><br>

        <button type="submit">Se connecter</button>
    </form>
{% endblock %}
